{
  "manifest_version": 3,
  "name": "SafetyLight Extension",
  "version": "0.1.0",
  "description": "SafetyLight Gmail inspector (skeleton).",
  "permissions": ["storage"],
  "host_permissions": ["https://mail.google.com/*"],
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content-gmail.js"],
      "css": ["sidebar.css"]
    }
  ]
}
